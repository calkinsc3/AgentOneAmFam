<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_margin"
    tools:context="com.example.jaz020.oneamfamoffice.ClaimInfo"
    android:background="@drawable/clouds" >

    <ScrollView
        android:id="@+id/info_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/cloudy_white" >

            <TextView
                android:id="@+id/client_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Client:" />

            <Spinner
                android:id="@+id/client_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"/>

            <TextView
                android:id="@+id/policy_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Policy:" />

            <Spinner
                android:id="@+id/policy_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false" />

            <TextView
                android:id="@+id/damages_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Damages:" />

            <EditText
                android:id="@+id/damages_entry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/Comments_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Comment:" />

            <EditText
                android:id="@+id/comments_entry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/bottom_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/info_scroll"
        android:layout_margin="10dp" />

</RelativeLayout>